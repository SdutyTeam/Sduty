<?xml version="1.0" encoding="utf-8"?>
<!--스터디 - 가입된 스터디 목록(스터디 이름, 카테고리/직업, 참여/제한 인원, 방장 별명), 스터디 상세보기 이동, 스터디 등록, 스터디 검색-->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.sign.JoinFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/common_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/common_top_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/icon_back"
                />

            <TextView
                android:id="@+id/common_top_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="내가 가입한 스터디"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_create_study"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@drawable/baseline_add_24"
                android:background="@color/white"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_list_study"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/btn_list_study"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@drawable/icon_group_2"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/common_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/common_top"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <!--        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--            xmlns:tools="http://schemas.android.com/tools"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            tools:context=".ui.main.study.MyStudyFragment">-->

            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                android:id="@+id/mystudy_list"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent" />-->
            <!--        </FrameLayout>-->
            <LinearLayout
                android:id="@+id/normalst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_200"
                android:padding="10dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:id="@+id/mygroup_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일반 스터디"
                    android:textStyle="bold"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mygroup_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="그룹 카테고리"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" ㆍ "/>

                    <TextView
                        android:id="@+id/mygroup_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="직업"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mygroup_people_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15/20명"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" ㆍ "/>

                    <TextView
                        android:id="@+id/mygroup_leader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="방장 별명"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_200"
                android:padding="10dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/normalst"
                >

                <TextView
                    android:id="@+id/mygroup_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캠 스터디"
                    android:textStyle="bold"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mygroup_category2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="그룹 카테고리"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" ㆍ "/>

                    <TextView
                        android:id="@+id/mygroup_job2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="직업"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mygroup_people_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15/20명"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" ㆍ "/>

                    <TextView
                        android:id="@+id/mygroup_leader2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="방장 별명"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
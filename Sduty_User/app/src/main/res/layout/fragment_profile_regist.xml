<?xml version="1.0" encoding="utf-8"?>
<!-- 프로필 등록 - 프로필 사진, 별명, 직업, 관심 분야, 생년월일, 자기소개-->
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.d108.sduty.ui.sign.viewmodel.ProfileViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        tools:context=".ui.sign.ProfileRegistFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/common_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/common_top_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/icon_back"
                />

            <TextView
                android:id="@+id/common_top_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="프로필 등록"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/common_top"
            app:layout_constraintBottom_toTopOf="@id/common_bottom"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/const_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginVertical="50dp"
                        android:layout_marginHorizontal="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/empty_profile_image"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="30dp"
                            />
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp"
                        app:layout_constraintTop_toBottomOf="@id/card_view_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginVertical="50dp"
                        android:layout_marginHorizontal="10dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/const_input_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            >

                            <TextView
                                android:id="@+id/tv_title_agree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="공개"
                                android:textSize="16sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginVertical="16dp"
                                android:layout_marginEnd="10dp"
                                />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/tv_title_agree"
                                android:visibility="@{vm.isUsedNickname? View.GONE : View.VISIBLE}"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="20dp"
                                >
                                <TextView
                                    android:id="@+id/tv_title_id_error"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="중복된 별명입니다"

                                    android:textColor="@color/red_300"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toStartOf="@id/iv_id_error"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <ImageView
                                    android:id="@+id/iv_id_error"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@android:drawable/stat_notify_error"
                                    app:layout_constraintTop_toTopOf="@id/tv_title_id_error"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:tint="@color/red_300" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <EditText
                                android:id="@+id/et_nickname"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:background="@drawable/textview_gray"
                                android:gravity="center"
                                android:hint="별명"
                                android:layout_marginVertical="5dp"
                                app:layout_constraintTop_toBottomOf="@id/tv_title_agree"
                                app:layout_constraintEnd_toStartOf="@id/frame_check"
                                app:layout_constraintStart_toStartOf="parent"
                                android:singleLine="true"
                                android:layout_marginEnd="20dp"
                                />

                            <FrameLayout
                                android:id="@+id/frame_check"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toTopOf="@id/et_nickname"
                                app:layout_constraintEnd_toEndOf="parent"
                                >
                                <ImageView
                                    android:id="@+id/iv_check_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/textview_gray"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:text="전체"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    />
                            </FrameLayout>

                            <EditText
                                android:id="@+id/et_job"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:hint="직업"
                                android:gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/et_nickname"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/frame_check_job"
                                android:background="@drawable/textview_gray"
                                android:layout_marginVertical="20dp"
                                android:singleLine="true"
                                android:layout_marginEnd="20dp"
                                />

                            <FrameLayout
                                android:id="@+id/frame_check_job"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toTopOf="@id/et_job"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:onClick="@{() -> vm.setPublicFlag(0)}"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/textview_gray"/>
                                <TextView
                                    android:id="@+id/tv_check_job"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:text="@{vm.flagJob == 0 ? `비공개` : vm.flagJob == 1 ? `친구만` : vm.flagJob == 2 ? `전체` : ``}"
                                    android:textSize="16sp"
                                    android:gravity="center"/>
                            </FrameLayout>

                            <EditText
                                android:id="@+id/et_interest"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:hint="관심 분야"
                                android:gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/et_job"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/frame_check_job"
                                android:background="@drawable/textview_gray"
                                android:layout_marginVertical="20dp"
                                android:singleLine="true"
                                android:layout_marginEnd="20dp"
                                />

                            <FrameLayout
                                android:id="@+id/frame_check_interest"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toTopOf="@id/et_interest"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:onClick="@{() -> vm.setPublicFlag(1)}"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/textview_gray"/>
                                <TextView
                                    android:id="@+id/tv_check_interest"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:text="@{vm.flagInterest == 0 ? `비공개` : vm.flagInterest == 1 ? `친구만` : vm.flagInterest == 2 ? `전체` : ``}"
                                    android:textSize="16sp"
                                    android:gravity="center"/>
                            </FrameLayout>

                            <EditText
                                android:id="@+id/et_birth"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:hint="생년월일"
                                android:gravity="center"
                                android:singleLine="true"
                                app:layout_constraintTop_toBottomOf="@id/et_interest"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/frame_check_job"
                                android:background="@drawable/textview_gray"
                                android:layout_marginVertical="20dp"
                                android:layout_marginEnd="20dp"
                                />

                            <FrameLayout
                                android:id="@+id/frame_check_birth"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toTopOf="@id/et_birth"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:onClick="@{() -> vm.setPublicFlag(2)}"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/textview_gray"/>
                                <TextView
                                    android:id="@+id/tv_check_birth"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:text="@{vm.flagBirth == 0 ? `비공개` : vm.flagBirth == 1 ? `친구만` : vm.flagBirth == 2 ? `전체` : ``}"
                                    android:textSize="16sp"
                                    android:gravity="center"/>
                            </FrameLayout>

                            <EditText
                                android:id="@+id/et_introduce"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:hint="자기 소개"
                                android:gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/et_birth"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/textview_gray"
                                android:layout_marginVertical="20dp"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/common_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
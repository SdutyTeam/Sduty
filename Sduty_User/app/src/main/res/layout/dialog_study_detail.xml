<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_study_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 명"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/study_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="그룹 명"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toEndOf="@id/tv_study_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_study_intoduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 소개"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_study_name" />

    <LinearLayout
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_study_intoduce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:background="@color/background_200">
    <TextView
        android:id="@+id/study_intoduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="그룹 소개"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_study_intoduce" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_study_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="그룹 가입"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintEnd_toStartOf="@id/btn_study_cancel"/>

    <Button
        android:id="@+id/btn_study_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
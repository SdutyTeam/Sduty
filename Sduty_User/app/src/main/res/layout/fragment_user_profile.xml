<?xml version="1.0" encoding="utf-8"?>
<!--사용자 프로필 - 사용자 닉네임, 프로필 사진, 숫자 표시(게시물, 팔로우, 팔로워),
한줄소개, 잔디그래프,게시물(그리드+스크롤) , 더 보기, 업적-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainVM"
            type="com.d108.sduty.ui.viewmodel.MainViewModel" />
        <variable
            name="vm"
            type="com.d108.sduty.ui.viewmodel.StoryViewModel" />
        <variable
            name="data"
            type="com.d108.sduty.model.dto.Timeline" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.mypage.UserProfileFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/common_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_more_horiz_black_24"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/divider_1"
                style="@style/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/common_top"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:collapsedTitleGravity="center|center_horizontal"
                    app:contentScrim="@android:color/transparent"
                    app:expandedTitleGravity="bottom|center"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">



                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        app:layout_collapseMode="pin">


                    </androidx.appcompat.widget.Toolbar>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/const_profile_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/white"
                        app:layout_constraintTop_toTopOf="parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            tools:src="@drawable/img_profile_sample"
                            loadImage="@{vm.profile.image}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_achieve"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_trophy"
                            app:tint="@color/yellow_200"
                            app:layout_constraintStart_toEndOf="@id/iv_profile"
                            app:layout_constraintTop_toTopOf="@id/iv_profile" />

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:text="@{vm.profile.nickname}"
                            tools:text="닉네임"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toStartOf="@id/tv_count_follow"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@id/iv_achieve"
                            app:layout_constraintTop_toTopOf="@id/iv_achieve" />

                        <TextView
                            android:id="@+id/tv_job"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            profileHashTagText="@{vm.profile}"
                            android:textSize="16sp"
                            tools:text="직업 / 관심 분야"
                            android:textColor="@color/app_purple_light"
                            app:layout_constraintEnd_toStartOf="@id/tv_count_follow"
                            app:layout_constraintStart_toStartOf="@id/iv_achieve"
                            app:layout_constraintTop_toBottomOf="@id/iv_achieve" />

                        <TextView
                            android:id="@+id/tv_introduce"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="@{vm.profile.shortIntroduce}"
                            android:textSize="16sp"
                            tools:text="한 줄 소개"
                            app:layout_constraintEnd_toStartOf="@id/tv_count_follow"
                            app:layout_constraintStart_toStartOf="@id/tv_job"
                            app:layout_constraintTop_toBottomOf="@id/tv_job" />


                        <TextView
                            android:id="@+id/tv_count_story"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginVertical="5dp"
                            android:text="@{`게시물 `+data.cntStory}"
                            tools:text="게시물 100"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_nickname" />

                        <TextView
                            android:id="@+id/tv_count_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="6dp"
                            android:text="@{`팔로우 `+vm.profile.followees}"
                            tools:text="팔로우 1000"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@id/tv_count_story"
                            app:layout_constraintTop_toBottomOf="@id/tv_count_story" />

                        <TextView
                            android:id="@+id/tv_count_follower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="6dp"
                            android:text="@{`팔로워 ` +vm.profile.followers}"
                            tools:text="팔로워 1000"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@id/tv_count_story"
                            app:layout_constraintTop_toBottomOf="@id/tv_count_follow" />


                        <TextView
                            android:id="@+id/btn_follow"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="12dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="팔로우"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            userProfile="@{vm.profile}"
                            myProfile="@{mainVM.profile}"
                            android:background="@drawable/button_app_blue"
                            style="@style/Widget.MaterialComponents.Badge"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_profile" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyler_contribution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="12dp"
                            android:scrollbars="none"
                            app:layout_constraintTop_toBottomOf="@id/btn_follow"

                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/const_tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_collapseMode="none"
                            app:layout_constraintTop_toBottomOf="@id/recyler_contribution"
                            android:layout_marginVertical="10dp"
                            >
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyler_story"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
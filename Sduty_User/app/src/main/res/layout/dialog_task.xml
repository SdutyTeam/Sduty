<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.main.timer.dialog.TaskDialog">

        <TextView
            android:id="@+id/tv_timer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="측정 시간"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tv_timer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/et_start_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_timer_info" />

        <TextView
            android:id="@+id/tv_start_time_info"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:gravity="center_vertical|center"
            android:text="시작 시간"
            app:layout_constraintTop_toBottomOf="@id/tv_timer"
            app:layout_constraintBottom_toBottomOf="@id/et_start_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_start_time"/>

        <EditText
            android:id="@+id/et_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_timer"
            app:layout_constraintStart_toEndOf="@id/tv_start_time_info"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_end_time_info"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:gravity="center_vertical|center"
            android:text="종료 시간"
            app:layout_constraintTop_toBottomOf="@id/tv_start_time_info"
            app:layout_constraintBottom_toBottomOf="@id/et_end_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_end_time"/>

        <EditText
            android:id="@+id/et_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_start_time_info"
            app:layout_constraintStart_toEndOf="@id/tv_end_time_info"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_title_info"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:gravity="center_vertical|center"
            android:text="제 목"
            app:layout_constraintTop_toBottomOf="@id/tv_end_time_info"
            app:layout_constraintBottom_toBottomOf="@id/et_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_title"/>

        <EditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_end_time_info"
            app:layout_constraintStart_toEndOf="@id/tv_title_info"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_content_info"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:gravity="center_vertical|center"
            android:text="내 용"
            app:layout_constraintTop_toBottomOf="@id/tv_title_info"
            app:layout_constraintBottom_toBottomOf="@id/et_content_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_content_1"/>

        <EditText
            android:id="@+id/et_content_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_info"
            app:layout_constraintStart_toEndOf="@id/tv_content_info"
            app:layout_constraintEnd_toStartOf="@id/iv_add_content" />

        <ImageView
            android:id="@+id/iv_add_content"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_add_circle"
            app:layout_constraintTop_toTopOf="@id/et_content_1"
            app:layout_constraintBottom_toBottomOf="@id/et_content_1"
            app:layout_constraintStart_toEndOf="@id/et_content_1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/et_content_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_content_1"
            app:layout_constraintStart_toStartOf="@id/et_content_1"
            app:layout_constraintEnd_toEndOf="@id/et_content_1" />

        <ImageView
            android:id="@+id/iv_remove_content_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_remove_circle"
            app:layout_constraintTop_toTopOf="@id/et_content_2"
            app:layout_constraintBottom_toBottomOf="@id/et_content_2"
            app:layout_constraintStart_toEndOf="@id/et_content_2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/et_content_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_content_2"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            app:layout_constraintStart_toStartOf="@id/et_content_2"
            app:layout_constraintEnd_toEndOf="@id/et_content_2" />

        <ImageView
            android:id="@+id/iv_remove_content_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_remove_circle"
            app:layout_constraintTop_toTopOf="@id/et_content_3"
            app:layout_constraintBottom_toBottomOf="@id/et_content_3"
            app:layout_constraintStart_toEndOf="@id/et_content_3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="삭제"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_modify"/>

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="수정"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_delete"
            app:layout_constraintEnd_toStartOf="@id/btn_save"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="저장"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_modify"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>